<div class="container">
  <form action="/todogroups" method="POST">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" placeholder="Name" name="name">
    </div>
    <div class="form-group">
      <label for="color">Color</label>
      <input class="form-control" id="color" rows="3" placeholder="e.g. #ba4a55" name="color" type="text"></input>
    </div>
    <div class="form-group">
        <label for="">Todo Item List</label>
       <ul>
         <% allTodos.forEach(function(todo){ %>
           <li>
           <label>
             <input type = "checkbox" id = "todo" name = "todoId" value = "<%= todo.id %>">
             <%= todo.title %>
             </label>
           </li>
         <% }) %>
       </ul>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
  <pre>
    <%- allTodos %>
  </pre>
</div>
